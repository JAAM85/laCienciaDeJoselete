<% content_for :title do %><%=@tema.titulo%><% end %>


<a href="<%=curso_path(Curso.find(Asignatura.find(@tema.asignatura).curso))%>" class="badge badge-primary"><%=Curso.find(Asignatura.find(@tema.asignatura).curso).name%></a>
<a href="<%=asignatura_path(Asignatura.find(@tema.asignatura))%>" class="badge badge-info"><%=(Asignatura.find(@tema.asignatura).name)%></a>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4"><%=@tema.titulo%></h1>
  <p class="lead"><%=sanitize @tema.descripcion%></p><img class="img-fluid" src="/images/temas/<%=@tema.imagen%>" alt="Generic placeholder image" />
</div>



<!-- Three columns of text below the carousel -->
<p class="display-4 text-center" id="asignaturas">Actividades</p>

<div class="album py-5 bg-light">
  <div class="container">

  <%=render :partial => "actividads/partials/actividades"%>   


<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Lista de actividades</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="links" class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<script>
$('#exampleModalLong').on('show.bs.modal', function (event) {

  var button = $(event.relatedTarget) // Button that triggered the modal
  var recipient = button.data('id') // Extract info from data-* attributes

  reload_links(recipient);
})
</script>

