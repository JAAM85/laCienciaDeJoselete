<%= form_for @trabajo do |f| %>
  <div class="form-group">
    <label for="">Página</label>
    <%= f.text_field :titulo, class: "form-control" %>
  </div>

    <div class="form-group">
    <label for="">Ejercicios</label>
    <%= f.text_field :descripcion, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="">Notas</label>
    <%= f.text_field :notas, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label for="">Asignatura</label>
    <%= f.select :asignatura, options_for_select(@asignaturas.map{ |u| [u.name, u.id] }), {}, { :class => 'form-control' } %>   
  </div>
    
    <%= f.submit "Añadir tarea de casa", :class => "btn btn-primary mb-2"%>
  <% end %>