<%= form_for @control do |f| %>
  <div class="form-group">
    <label for="">Descripcion</label>
    <%= f.text_field :descripcion, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="">Fecha</label>
    
    <div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                  <%= f.text_field :fecha, class: "form-control" %>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker({
                    format: 'YYYY-MM-DD',
                    minDate: '<%=DateTime.now.strftime("%Y-%m-%d")%>'
                });
            });
        </script>
    </div>
</div>
  </div>

  
  <div class="form-group">
    <label for="">Asignatura</label>
    <%= f.select :asignatura, options_for_select(@asignaturas.map{ |u| [u.name, u.id] }), {}, {:onchange=> "", :class => 'form-control' } %>   
  </div>
    

    <%= f.submit "Guardar", :class => "btn btn-danger mb-2"%>
  <% end %>