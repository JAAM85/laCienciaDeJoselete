<% content_for :title do %><%=@noticia.titulo%><% end %>
  
<div style="z-index: 10;position:relative;top:50px" class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center text-light">
  <h1 class="display-4 "><%=@noticia.titulo%></h1>
  <p class="lead"><%=@noticia.resumen%></p>
</div>

<div id="overlap">
  <div class="noticiaDisplay" style="background-image:url('/images/noticias/<%=@noticia.imagen%>');background-size:cover">
  </div>

  <div class="list-inline">
    <figcaption class="figure-caption list-inline-item">Escrito por: <strong>Águeda Pérez</strong></figcaption>
    <%if @noticia.dateUpdated.nil?%>
      <figcaption class="figure-caption list-inline-item">Creado el <strong><%=t(@noticia.dateCreated.strftime("%A"))%>, <%= @noticia.dateCreated.strftime("%d de ")%><%= t(@noticia.dateCreated.strftime("%B"))%><%= @noticia.dateCreated.strftime(" de %Y") %></strong> </figcaption>
    <%else%>
      <figcaption class="figure-caption list-inline-item">Actualizado el <strong><%=t(@noticia.dateUpdated.strftime("%A"))%>, <%= @noticia.dateUpdated.strftime("%d de ")%><%= t(@noticia.dateUpdated.strftime("%B"))%><%= @noticia.dateUpdated.strftime(" de %Y") %></strong> </figcaption>
    <%end%>
  </div>
  <hr>

  <p class="lead text-justify">
    <%=sanitize @noticia.contenido, tags: ['h3', 'h4', 'h5', 'h6', 'blockquote', 'a', 'ul', 'ol',
    'nl', 'li', 'b', 'i', 'strong', 'em', 'strike', 'code', 'hr', 'br', 'div', 'p',
    'table', 'thead', 'caption', 'tbody', 'tr', 'th', 'td', 'pre', 'span'], attributes: %w(style) %>
  </p>
</div>